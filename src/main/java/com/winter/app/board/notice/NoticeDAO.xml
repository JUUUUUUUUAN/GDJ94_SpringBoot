<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.winter.app.board.notice.NoticeDAO">
    	<select id="countList" resultType="Long">
    		SELECT count(board_num) FROM notice
    	</select>
    	<select id="list" resultType="NoticeDTO" parameterType="Pager">
    		SELECT * FROM notice LIMIT #{startNum}, #{perPage}
    	</select>
    	<update id="update" parameterType="NoticeDTO">
    	UPDATE notice SET board_title=#{boardTitle}, board_writer=#{boardWriter}, board_contents=#{boardContents} WHERE board_num=#{boardNum};
    	</update>
    	<delete id="delete" parameterType="Long">
    		DELETE FROM notice WHERE board_num=#{boardNum} 
    	</delete>
    	<insert id="insert" parameterType="NoticeDTO">
    	INSERT INTO notice(board_title, board_writer, board_date, board_contents) 
    	VALUES(#{boardTitle},#{boardWriter},now(),#{boardContents})
    	</insert>
    	<select id="detail" parameterType="NoticeDTO" resultType="NoticeDTO">
    		SELECT * FROM notice WHERE board_num=#{boardNum}
    	</select>
    </mapper>